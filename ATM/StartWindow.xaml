<Window x:Class="ATM.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="StartWindow" Width="1920" Height="1080">
    <DockPanel LastChildFill="True">
        <Button Click="StartButton_Click" Style="{StaticResource PositiveButton}"
                DockPanel.Dock="Bottom" Margin="200 0 200 50">
            Начать
        </Button>
        <TextBlock Style="{StaticResource CommonText}" VerticalAlignment="Center">
            Вас приветсвует <LineBreak />
            Система Обслуживания Банкоматов
        </TextBlock>
    </DockPanel>
</Window>